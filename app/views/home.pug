html
  head
    include components/_head.pug
  body
    section#home.sh-background
      include components/_header-log-in.pug
      .lyt-main.text-center
        .lyt-game-play.sh-div-default
          h2 HORA DA GUERRA
          button.btn.btn-primary.sh-text-default.js-btn-play JOGAR
        .lyt-store.sh-div-default
          h2 CUSTOMIZE-SE
          button.btn.btn-primary.sh-text-default.js-btn-shop COMPRAR
        .lyt-ranking.sh-div-default.js-ranking
          h2 RANKING
          ol
            li JOGADOR123 (2000)
            li FULANO (1500)
            li SNIPER (1200)
      .lyt-levels.sh-div-default.not-active
        button.btn.btn-danger.btn-close X
        h2 ESCOLHA A DIFICULDADE
        .js-appended-levels
          a.lyt-level.center-block(href='game_on.html?level=1')
            button.btn.btn-primary.sh-text-title FÁCIL
          a.lyt-level.center-block(href='game_on.html?level=2')
            button.btn.btn-primary.sh-text-title MÉDIO
          a.lyt-level.center-block(href='game_on.html?level=3')
            button.btn.btn-primary.sh-text-title DIFÍCIL
      .lyt-shops.sh-div-default.not-active
        button.btn.btn-danger.btn-close X
        h2.text-center LOJA SKINS
        .item.sell
          .preview
            img(src="../images/piratas_loja.jpg")
            button.pirata.btn.btn-success.btn-preview VER
          .sec-sell
            h2 SKIN PIRATA
            p PREÇO: 100 MOEDAS
            button.btn.btn-danger COMPRAR
        .item.sell
          .preview
            img(src="../images/espacial_loja.jpg")
            button.espacial.btn.btn-success.btn-preview VER
          .sec-sell
            h2 SKIN FUTURO
            p PREÇO: 100 MOEDAS
            button.btn.btn-danger COMPRAR
        .row
        .item.buy
          .preview
            img(src="../images/cocacola_loja.jpg")
            button.coca.btn.btn-success.btn-preview VER
          .sec-buy
            h2 SKIN COCA
            p PREÇO: GRÁTIS
            button.btn.buttons COMPRADO
        .item.sell
          .preview
            img(src="../images/sushi_loja.jpg")
            button.sushi.btn.btn-success.btn-preview VER
          .sec-sell
            h2 SKIN SUSHI
            p PREÇO: 100 MOEDAS
            button.btn.btn-danger COMPRAR

      //- modais
      .modal-pirates.modal-loja.sh-div-default.not-active
        button.btn.btn-danger.btn-close X
        .plan
          img(src="../images/mar.jpg")
        .ships
          img.center-block(src="../images/pirata/5.png")
          img.center-block(src="../images/pirata/4.png")
