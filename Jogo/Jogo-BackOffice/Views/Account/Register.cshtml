@model Jogo_BackOffice.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    if (string.IsNullOrEmpty(Layout))
    {

        Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    }
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

         <div class="row" id="divRegister" >
							<div class="col-sm-6 col-sm-offset-3 form-box">
								<div class="form-top">
									<div class="form-top-left">
										<h3>Cadastro</h3>
										<p>Entre com os dados a seguir:</p>
									</div>
									<div class="form-top-right">
										<i class="fa fa-user"></i>
									</div>
                                    <div id="alertRegister" style="width: 100%;float:left;" class="alert alert-danger fade in"></div>
								</div>
								<div class="form-bottom">
									<div class="form-group">
									
									
										<label class="sr-only" for="txtNome">Nome</label>
                                        <input type="text" id="txtNome" placeholder="Nome..." class="form-control"/>   
									</div>
									
									<div class="form-group">
										<label class="sr-only" for="txtSobrenome">Sobrenome</label>
										<input type="text" id="txtSobrenome" placeholder="Sobrenome..." class="form-control"/>
									</div>

                                    <div class="form-group">
										<label class="sr-only" for="txtEmail">Email</label>
                                        <input type="text" id="txtEmail" placeholder="Email..." class="form-control" onblur="validaEmail(this)"/>
									</div>
									
									<div class="form-group">
									 @Html.LabelFor(m => m.UserName, new { @class= "sr-only" })
									 @Html.TextBoxFor(m => m.UserName, new { @id="txtUsername1", @placeholder= "Usuário..."})
									</div>
									<div class="form-group">
									@Html.LabelFor(m => m.Password, new { @class= "sr-only" })
									@Html.PasswordFor(m => m.Password, new { @class="form-control password", @id="txtPassword1" , @placeholder="Senha..."})	
								   </div>
									<div class="form-group">
									@Html.LabelFor(m => m.ConfirmPassword, new { @class= "sr-only" })
									@Html.PasswordFor(m => m.ConfirmPassword, new { @class="form-control password", @id="txtConfPass" , @placeholder="Senha..."})
									</div>
									
									<button type="submit" id="btnCriarConta" class="btnLogin btn-input">Enviar</button>
									
									<div class="form-group">
                                        	@Html.ActionLink("Voltar para o login", "Login")
									</div>
								</div>
							</div>
						</div>
    

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
